<?xml version="1.0" ?>
<robot name="anro_lab2_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">
<xacro:property name="params" value="${load_yaml('param.yaml')}"/>

  
  <link name="base">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 0.1" />
      </geometry>
      <material name="gray">
        <color rgba="0.2 0.2 0.2 1" />
      </material>
    </visual>
  </link>
  
  <link name="first_link">
    <visual>
      <origin xyz="0 0 ${0.5 * params['robot']['d']}" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 ${params['robot']['d']}" />
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1" />
      </material>
    </visual>
  </link>
      
  <joint name="base_to_first_link" type="fixed">
    <parent link="base"/>
    <child link="first_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>
  
      
 <link name="second_link">
    <visual>
      <origin xyz="${0.5 * params['robot']['a']} 0 0"/>
      <geometry>
        <box size="${params['robot']['a']} 0.1 0.1" />
      </geometry>
      <material name="green">
        <color rgba="0 1 0 1" />
      </material>
    </visual>
  </link>
  
  <joint name="first_link_to_second_link" type="fixed">
    <parent link="first_link"/>
    <child link="second_link"/>
    <origin xyz="0 0 ${params['robot']['d']}" rpy="0 0 0"/>
  </joint>
  
  <link name="tool">
    <visual>
      <origin xyz="${0.5*params['robot']['b']} 0 0"/>
      <geometry>
        <box size="${params['robot']['b']} 0.1 0.1" />
      </geometry>
      <material name="red">
        <color rgba="1 0 0 1" />
      </material>
    </visual>
  </link>
    
  <joint name="second_link_to_tool" type="fixed">
    <parent link="second_link"/>
    <child link="tool"/>
    <origin xyz="${params['robot']['a']} 0 0"/>
  </joint>

</robot>
